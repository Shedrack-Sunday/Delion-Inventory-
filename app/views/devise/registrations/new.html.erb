<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<nav class="navbar navbar-light bg-light justify-content-between nav_bar">
  <%= link_to unauthenticated_root_path do %><i class="bi bi-arrow-left-circle-fill back_btn"></i> <% end %>
  <span class="navbar-brand d-flex justify-content-center white_text">REGISTER</span>  
   <%= f.submit "Sign Up" , class:'btn btn-success my-2 my-sm-0 white_text action_btn ' %>
</nav>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "Name", class:'form-control', placeholder:'Name' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control' , placeholder:'Email' %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:'form-control', placeholder:'Password' %>
    
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:'form-control' , placeholder:'Password Confirmation' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
